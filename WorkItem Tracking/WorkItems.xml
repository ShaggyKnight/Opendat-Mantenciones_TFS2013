      <dependency taskId="WITs" />
      <dependency taskId="Categories" />
    </dependencies>
    <taskXml>
      <PROCESSCONFIGURATION>
        <ProjectConfiguration fileName="WorkItem Tracking\Process\ProcessConfiguration.xml" />
      </PROCESSCONFIGURATION>
    </taskXml>
